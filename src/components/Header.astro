---
const links = [
  { name: 'Inicio', href: `${import.meta.env.BASE_URL}` },
  { name: 'Soluciones', href: `${import.meta.env.BASE_URL}soluciones/` },
  { name: 'Servicios', href: `${import.meta.env.BASE_URL}servicios/` },
  { name: 'Nosotros', href: `${import.meta.env.BASE_URL}nosotros/` },
 // { name: 'Novedades', href: `${import.meta.env.BASE_URL}novedades/` },
  { name: 'Sedes', href: `${import.meta.env.BASE_URL}sedes/` },
  { name: 'Contactenos', href: `${import.meta.env.BASE_URL}contactenos/` },
];
const currentUrl = Astro.url.pathname;
console.log(currentUrl)

---

<header class="">
  <nav class="sm:bg-white bg-gray-800 p-2 font-openSans fixed top-0 left-0 w-full z-10 shadow-md">
    <div class="max-w-7xl mx-auto px-2 sm:px-6 lg:px-8 ">
      <div class="relative flex items-center justify-between h-16">
        <div class="absolute inset-y-0 left-0 flex items-center sm:hidden">
          <!-- Mobile menu button-->
          <button
            type="button"
            class="inline-flex items-center justify-center bg-gray-700 p-2 rounded-md text-gray-400 hover:text-white hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-white"
            aria-controls="mobile-menu"
            aria-expanded="false"
            data-toggle="collapse"
          >
            <span class="sr-only">Open main menu</span>
            <!-- Icon when menu is closed. -->
            <svg
              class="block h-6 w-6"
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4 6h16M4 12h16m-7 6h7"
              />
            </svg>
            <!-- Icon when menu is open. -->
            <svg
              class="hidden h-6 w-6"
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M6 18L18 6M6 6l12 12"
              />
            </svg>
          </button>
        </div>
        <div class=" flex items-center justify-center sm:justify-between w-full">
          <div class="flex-shrink-0">
            <a href="/" class="flex-grow">
              <img src="/svgs/logo30anios.png" alt="" srcset="" class="lg:w-full md:w-80 sm:w-80 sm:h-[55px] h-[48px]">
            </a>
          </div>
          <div class="hidden sm:block sm:ml-8">
            <div class="flex space-x-2">
              {links.map((link) => (
              
                <a
                  href={link.href}
                 class={link.href == currentUrl 
                  ? 
                  "text-gray-500  hover: hover:text-gray-800 px-3 py-2 rounded-md md:text-md lg:text-md font-semibold sm:text-md transition-all ease-in-out" 
                  : "text-[#8fc74a] hover: hover:text-gray-800 px-3 py-2 rounded-md md:text-md lg:text-md font-semibold sm:text-md transition-all ease-in-out"}
                  // class="text-[#8fc74a] hover: hover:text-gray-800 px-3 py-2 rounded-md md:text-sm lg:text-xl font-semibold sm:text-sm transition-all ease-in-out"
                  aria-current="page"
                >
                  {link.name}
                </a>
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>
  
    <!-- Mobile menu, show/hide based on menu state. -->
    <div class="sm:hidden" id="mobile-menu">
      <div class="px-2 pt-2 pb-3 space-y-1">
        {links.map((link) => (
          <a
            href={link.href}
            class="text-gray-300 hover:bg-gray-700 hover:text-white block px-3 py-2 rounded-md text-base font-medium"
          >
            {link.name}
          </a>
        ))}
      </div>
    </div>
  </nav>


</header>


<script is:inline>
  document.addEventListener('DOMContentLoaded', function () {
    const menuButton = document.querySelector('button[data-toggle="collapse"]');
    const mobileMenu = document.getElementById('mobile-menu');
    mobileMenu.classList.toggle('hidden');
    const icons = menuButton.querySelectorAll('svg');

    menuButton.addEventListener('click', function () {
      mobileMenu.classList.toggle('hidden');

      icons.forEach((icon) => {
        icon.classList.toggle('hidden');
      });
    });
  });
</script>